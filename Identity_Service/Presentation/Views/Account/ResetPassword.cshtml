@model Presentation.Models.ResetPassword.ResetPasswordDTO
@{ ViewData["Title"] = "تغییر رمز عبور "; }
<div class="global-container">
    <div class="card login-form">
        <div class="card-body">
            <h3 class="card-title text-center">تغییر رمز عبور</h3>
            <div class="card-text text-right">
                <form asp-action="ResetPassword" method="post" asp-antiforgery="true">
                    <input type="hidden" asp-for="Token" />
                    <input type="hidden" asp-for="UserName" />
                    <input type="hidden" asp-for="UCB" />
                    <div class="form-group text-danger" asp-validation-summary="All"></div>
                    <div class="form-group">
                        <label>گذرواژه</label>
                        <input asp-for="Password" type="password" autocomplete="off" class="form-control form-control-sm">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>تکرار گذرواژه</label>
                        <input asp-for="ConfirmPassword" type="password" autocomplete="off" class="form-control form-control-sm">
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>نمایش گذرواژه</label>
                        <input type="checkbox" class="col-md-1 col-sm-1" id="ShowPassword">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block">تغیر رمز عبور</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script>
        $('#ShowPassword').change(function (e) {
            if (this.checked) {
                $('#Password').attr('type', 'text');

            } else {
                $('#Password').attr('type', 'password');
            }
            if (this.checked) {
                $('#ConfirmPassword').attr('type', 'text');

            } else {
                $('#ConfirmPassword').attr('type', 'password');
            }
        });
    </script>
}

