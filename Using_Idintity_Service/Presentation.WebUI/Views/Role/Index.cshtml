@model IEnumerable<SelectListDTO>
<div class="col-md-12 form-group">
    <a asp-action="Create" class="btn btn-success">Create</a>
</div>
<table class="table table-bordered table-striped table-info">
    <tr>
        <th>شناسه</th>
        <th>نام</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>
                <a href="/RoleClaims/Index?RoleName=@item.Name" class="btn btn-warning">claims</a>
                <a href="/Role/RemoveRole?RoleName=@item.Name" class="btn btn-danger">delete</a>
            </td>
        </tr>
    }
</table>
