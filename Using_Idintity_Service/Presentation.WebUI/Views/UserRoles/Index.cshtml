@model List<string>
<div class="col-md-12 form-group">
    <a href="/UserRoles/Create?userName=@ViewBag.userName" class="btn btn-success">add role to user</a>
</div>
<table class="table table-bordered table-striped table-info">
    <tr>
        <th>نام</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item</td>
            <td>
                <a href="/UserRoles/RemoveUserRole?userName=@(ViewBag.userName)&roleName=@item" class="btn btn-danger">delete</a>
            </td>
        </tr>
    }
</table>
